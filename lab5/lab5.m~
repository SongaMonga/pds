%% R1.b)
clear all; close all
load("sar_image.mat");
colormap cool
imagesc(I);

%% R1.c)
clear all; close all
load("sar_image.mat");
ice = imcrop(I, [760 2453 949 188]);
water = imcrop(I, [1 1 629 1234]);
p_ice_exp = mle(ice(:), 'distribution', 'Exponential');
p_ice_ray = mle(ice(:), 'distribution', 'Rayleigh');
p_ice_nor = mle(ice(:), 'distribution', 'Normal');
p_water_exp = mle(water(:), 'distribution', 'Exponential');
p_water_ray = mle(water(:), 'distribution', 'Rayleigh');
p_water_nor = mle(water(:), 'distribution', 'Normal');

%% R1.d)
clear all; close all
load("sar_image.mat");

ice = imcrop(I, [760 2453 949 188]);
figure('Name', 'Ice'); histogram(ice(:), 'Normalization', 'probability')
ice_exp = exppdf(ice(:), p_ice_exp);
figure('Name', 'Ice - Exponential'); plot(ice(:), ice_exp)
ice_ray = raylpdf(ice(:), p_ice_ray);
figure('Name', 'Ice - Rayleigh'); plot(ice(:), ice_ray)
ice_nor = normpdf(ice(:), p_ice_nor(1), p_ice_nor(2));
figure('Name', 'Ice - Normal'); plot(ice(:), ice_nor)


water = imcrop(I, [1 1 629 1234]);
figure('Name', 'Water'); histogram(water(:), 'Normalization', 'probability')